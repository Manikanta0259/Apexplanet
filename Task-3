  <div class="quiz-container bg-white shadow-lg rounded-2xl w-full max-w-2xl p-6 space-y-6">
    
    <!-- Header -->
    <header class="text-center">
      <h1 class="text-3xl font-bold text-orange-600">General knowledge</h1>
